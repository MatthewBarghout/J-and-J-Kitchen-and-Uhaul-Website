rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to orders only for authenticated users
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to admin settings for all users, write only for authenticated
    match /admin/settings {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to other admin documents only for authenticated users
    match /admin/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}